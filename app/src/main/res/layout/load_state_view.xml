<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/load_state_errorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="Error message"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#F64A69"
        android:textSize="12sp" />

    <ProgressBar
        android:id="@+id/load_state_progress"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:indeterminateTint="#EDD719"
        android:layout_centerInParent="true" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/load_state_retry"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/round_btn_loadstate"
        android:text="Retry"
        android:textAppearance="@style/CustomTitle"
        android:textSize="14sp" />

</RelativeLayout>